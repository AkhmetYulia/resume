<div>
    {{#each goodsBlock}}
    <div class="card mt-4" style="max-width: 540px;">
        <div class="row">
            <div class="col-4">
                <img src="{{image}}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
            <div class="col-4">
                {{#with price}}
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{value}}</p>
                </div>
                {{/with}}
            </div>
            <div class="col-4">
                <div class="card-body">
                    <h5 class="card-title">{{amount}}</h5>
                </div>
            </div>
            <div class="col-4">
                {{#each buttons}}
                <div class="card-body">
                    <h5 class="btn btn-{{#if isPrimary}}primary{{/if}}{{#if isDanger}}danger{{/if}}">{{text}}</h5>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}
</div>