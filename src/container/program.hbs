<div>
    <section>
        <h1>
            {{program.excursion.name}}
        </h1>
        <p>{{program.excursion.location.city}}, {{program.excursion.location.country}}</p>
        <p>{{program.excursion.date}}</p>
        <hr>
    </section>
    <section>
        <h2>
            {{program.excursion.program.[0].name}}
        </h2>
        <p>
            Type: {{program.excursion.program.[0].type}}
        </p>
        <p>
            Duration: {{program.excursion.program.[0].duration}}
        </p>
        <ul>
            <li>
                <b>Details:</b>
            </li>
            {{#with program}}
            {{#with excursion}}
            {{#with program.[0]}}
            {{#with details}}
            {{#with museum}}
            <ul>
                <li>
                    Museum: {{name}}
                </li>
                <li>
                    Location: {{location.address}}, {{location.city}}, {{location.country}}
                </li>
                <ul>
                    <li>
                        <b>Exhibits:</b>
                    </li>
                    {{#each exhibits}}
                    <li>
                        {{name}}
                    </li>
                    <li>
                        {{artist}}
                    </li>
                    <li>
                        {{description}}
                    </li>
                    <li>
                        {{#if audio_guide}}(Audio guide){{/if}}
                    </li>
                    {{/each}}
                </ul>
                <ul>
                </ul>
            </ul>
            {{/with}}
            {{/with}}
            {{/with}}
            {{/with}}
            {{/with}}
        </ul>
        <hr>
        <h3>
            Guide: {{program.excursion.program.[0].details.guide.name}}
        </h3>
        {{program.excursion.program.[0].details.guide.language}}
        <p>{{program.excursion.program.[0].details.guide.rating}}</p>
    </section>
    <hr>
    <section>
        <h3>
            {{program.excursion.program.[1].name}}
        </h3>
        <p>
            Type: {{program.excursion.program.[1].type}}
        </p>
        <p>
            Duration: {{program.excursion.program.[1].duration}}
        </p>
        <ul>
            <li>
                <b>Details:</b>
            </li>
            {{#with program}}
            {{#with excursion}}
            {{#with program.[1]}}
            {{#with details}}
            {{#with venue}}
            <ul>
                <li>
                    Venue: {{name}}
                </li>
                <li>
                    Location: {{location.address}}, {{location.city}}, {{location.country}}
                </li>
                <ul>
                    <li>
                        <b>Performers:</b>
                    </li>
                    {{#each performers}}
                    <li>
                        {{name}}
                    </li>
                    <li>
                        {{type}}
                    </li>
                    {{/each}}
                </ul>
                <ul>
                </ul>
            </ul>
            {{/with}}
            {{/with}}
            {{/with}}
            {{/with}}
            {{/with}}
        </ul>
        <hr>
        <h3>
            Guide: {{program.excursion.program.[1].details.guide.name}}
        </h3>
        {{program.excursion.program.[1].details.guide.language}}
        <p>{{program.excursion.program.[1].details.guide.rating}}</p>
    </section>
</div>