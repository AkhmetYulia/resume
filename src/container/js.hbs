<div>
    <main>
        <h1>
            <span class="badge text-bg-info">{{name}}</span>
        </h1>
        <b><span class="badge text-bg-warning">{{description}}</span></b>
        <hr>

        {{#with history}}
        <b>{{founder}} ({{year}})</b>
        {{/with}}
        <section>
            <ul>
                <ul>
                    <b>Types:</b>
                    <li>
                        <span class="badge text-bg-info">Number</span>
                        <span class="badge text-bg-info">String</span>
                        <span class="badge text-bg-info">Boolean</span>
                        <span class="badge text-bg-info">Null</span>
                        <span class="badge text-bg-info">Undefined</span>
                        <span class="badge text-bg-info">Symbol</span>
                        <span class="badge text-bg-info">Object</span>
                    </li>
                </ul>
                <ul>
                    <b>Syntax:</b>
                    {{#with syntax}}
                    <li><span class="badge text-bg-warning">{{variables}}</span>
                        <span class="badge text-bg-warning">{{functions}}</span>
                        <span class="badge text-bg-warning">{{conditionals}}</span>
                        <span class="badge text-bg-warning">{{loops}}</span>
                        <span class="badge text-bg-warning">{{classes}}</span>
                    </li>
                    {{/with}}
                </ul>
                <ul>
                    <b>Features:</b>
                    <li>
                        <span class="badge text-bg-info">{{#with features}}{{this}}{{/with}}</span>
                    </li>
                </ul>
                <ul>
                    <b>Libraries:</b>
                    <li>
                        <span class="badge text-bg-warning">{{#with libraries}}{{this}}{{/with}}</span>
                    </li>
                </ul>
                <ul>
                    <b>Tools:</b>
                    <li>
                        <span class="badge text-bg-info">{{#with tools}}{{this}}{{/with}}</span>
                    </li>
                </ul>
                <ul>
                    <br>
                    <button type="button" class="btn btn-warning"><b>Community:</b></button>

                    <button type="button" class="btn btn-link">{{#each community}}
                        <li>{{name}}</li>
                        {{type}}{{/each}}
                    </button>
                </ul>
            </ul>
        </section>
    </main>
</div>